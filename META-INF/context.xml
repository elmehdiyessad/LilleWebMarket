<Context path="/LilleWebMarket" docBase="LilleWebMarket">


    <!-- Pool de connexion -->
    <Resource
        name="database"
        auth="Container"
        type="javax.sql.DataSource"
        maxActive="8"
        maxIdle="4"
        maxWait="10000"
        username="demodea"
        password="moi"
        driverClassName="org.postgresql.Driver"
        url="jdbc:postgresql://sqlserv/da2i"
    />


    <!-- Realm des utilisateurs -->
    <Realm
        className="org.apache.catalina.realm.DataSourceRealm"
        name="realm-database"

        localDataSource="true"
        dataSourceName="database"

        digest="md5"

        userTable="lwm_utilisateur"
        userNameCol="login"
        userCredCol="mdp"

        userRoleTable="lwm_utilisateur_infos"
        roleNameCol="role"
    />


</Context>
